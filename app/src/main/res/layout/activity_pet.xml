<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f8f8ff"
    >
    <TextView
        android:id="@+id/pet_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Pet Detail"
        android:textColor="#b182c3"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/pet_detail_catimg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/cat_ilust"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <TextView
        android:id="@+id/pet_detail_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pet_detail_catimg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="품종: 길고양이"
        android:textColor="#b182c3"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/pet_detail_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LV:0"
        android:textSize="30sp"
        android:textColor="#b182c3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_category"
        />

    <TextView
        android:id="@+id/pet_detail_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exp: 0/500"
        android:textColor="#b182c3"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_lv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ProgressBar
        android:id="@+id/exp_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingTop="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_exp"
        />

    <TextView
        android:id="@+id/pet_detail_intimacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friendship: 0/100"
        android:textColor="#b182c3"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exp_progress"
        />

    <ProgressBar
        android:id="@+id/friendship_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingTop="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_intimacy"
        />

    <Button
        android:id="@+id/pet_detail_previous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/friendship_progress"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="이전 펫"
        />

    <Button
        android:id="@+id/pet_detail_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/friendship_progress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="펫 목록"
        />

    <Button
        android:id="@+id/pet_detail_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/friendship_progress"
        app:layout_constraintRight_toRightOf="parent"
        android:text="다음 펫"
        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_main"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>