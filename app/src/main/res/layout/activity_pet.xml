<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    >
    <TextView
        android:id="@+id/pet_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/pet_detail_text"
        android:textColor="@color/text_color"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/pet_detail_catimg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/cat_ilust"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <TextView
        android:id="@+id/pet_detail_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pet_detail_catimg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/kind_cat"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/pet_detail_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lv"
        android:textSize="30sp"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_category"
        />

    <TextView
        android:id="@+id/pet_detail_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exp"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_lv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ProgressBar
        android:id="@+id/pet_detail_exp_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingTop="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_exp"
        />

    <TextView
        android:id="@+id/pet_detail_intimacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friendship"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_detail_exp_progress"
        />

    <ProgressBar
        android:id="@+id/pet_detail_friendship_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingTop="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_intimacy"
        />

    <Button
        android:id="@+id/pet_detail_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_friendship_progress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/pet_list"
        />


</androidx.constraintlayout.widget.ConstraintLayout>