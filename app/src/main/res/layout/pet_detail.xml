<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/pet_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="길고양이"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pet_datail_catimg"/>

    <ImageView
        android:id="@+id/pet_detail_catimg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/cat_ilust"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/pet_detail_name" />

    <TextView
        android:id="@+id/pet_detail_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pet_detail_catimg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="품종: 길고양이"
        android:textSize="30sp"
    />

    <TextView
        android:id="@+id/pet_detail_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:text="LV:0"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_detail_category"
        />

    <TextView
        android:id="@+id/pet_detail_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exp: 0/500"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/pet_detail_lv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pet_detail_category" />
    <TextView
        android:id="@+id/pet_detail_intimacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/100"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/pet_detail_lv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_detail_exp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>