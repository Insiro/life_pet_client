<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pet_info">

    <ImageView
        android:id="@+id/pet_info_petimg"
        android:layout_width="212dp"
        android:layout_height="195dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"

        android:src="@drawable/littledeep_cat_file_style1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pet_info_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pet_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/pet_info_petimg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pet_info_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/500"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/pet_info_petimg"
        app:layout_constraintTop_toBottomOf="@+id/pet_info_Lv" />

    <TextView
        android:id="@+id/pet_info_friendly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/100"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/pet_info_petimg"
        app:layout_constraintTop_toBottomOf="@+id/pet_info_exp" />

    <TextView
        android:id="@+id/pet_info_Lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/pet_info_petimg"
        app:layout_constraintTop_toBottomOf="@+id/pet_info_name" />

    <ListView
        android:id="@+id/pet_info_petlist"
        android:layout_width="418dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_info_petimg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>